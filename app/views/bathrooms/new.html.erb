<div class="container border bg-white col-lg-5 col-sm-6 mt-4 py-3">
  <h1 class="d-flex justify-content-center">List your bathroom</h1>
  <%= simple_form_for(@bathroom, html: { class: "d-flex flex-column align-items-center" }) do |f| %>
    <%= f.input :price, label: 'Price per use (in dollars)', wrapper_html: { class: 'w-75' } %>
    <%= f.input :address, wrapper_html: { class: 'w-75' } %>
    <%= f.input :description, wrapper_html: { class: 'w-75' } %>
    <%= f.input :photo, input_html: { class: "bg-white" }, wrapper_html: { class: 'w-75' }, as: :file, required: true %>
    <div class="btn d-flex justify-content-center pb-2">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
